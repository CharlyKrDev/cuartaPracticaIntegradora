<h1>Buscar Usuario por Email</h1>
<form action="/dashboardUsers" method="get">
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
    <button type="submit">Buscar</button>
</form>

<div id="result">
    {{#if user}}
    <h2>Resultados:</h2>
    <p><strong>Nombre:</strong> {{user.name}}</p>
    <p id="userEmail"><strong>Email:</strong> {{user.email}}</p>
    <p><strong>Rol actual:</strong> {{user.role}}</p>

    <label for="newRole">Nuevo Rol:</label>
    <select id="newRole">
        <option value="user">User</option>
        <option value="premium">Premium</option>
        <option value="admin">Admin</option>
    </select>
    <button id="updateRoleBtn">Actualizar Rol</button>
    <button id="deleteUserBtn">Eliminar usuario</button>


    <p id="message"></p>
    {{else if error}}
    <p>{{error}}</p>
    {{/if}}
</div>
<button><a href="/products">Inicio</a></button>
<button><a href="/current">Volver</a></button>
<script type="module" src="js/dashboardUser.js"></script>